@model IEnumerable<Domain.UserTitleInProject>

@{
    ViewData["Title"] = "Index";
    ViewData["Site"] = "Titles in project";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title.Title)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.UserTitleInProjectId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.UserTitleInProjectId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.UserTitleInProjectId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
