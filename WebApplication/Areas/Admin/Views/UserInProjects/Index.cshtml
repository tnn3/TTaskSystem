@model IEnumerable<Domain.UserInProject>

@{
    ViewData["Title"] = "Index";
    ViewData["Site"] = "Project users";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Project)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TitleInProject)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.User.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Project.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TitleInProject.Title.Title)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.UserInProjectId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.UserInProjectId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.UserInProjectId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
