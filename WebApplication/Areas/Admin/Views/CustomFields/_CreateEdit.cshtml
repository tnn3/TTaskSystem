@using Domain.Enums
@model Domain.CustomField

<div class="form-group">
    <label asp-for="FieldName" class="col-md-2 control-label"></label>
    <div class="col-md-10">
        <input asp-for="FieldName" class="form-control" />
        <span asp-validation-for="FieldName" class="text-danger"></span>
    </div>
</div>
<div class="form-group">
    <label asp-for="FieldType" class="col-md-2 control-label"></label>
    <div class="col-md-10">
        <select asp-for="FieldType" class="form-control" asp-items="@Html.GetEnumSelectList<FieldType>()"></select>
    </div>
</div>
<div class="form-group">
    <label asp-for="PossibleValues" class="col-md-2 control-label"></label>
    <div class="col-md-10">
        <input asp-for="PossibleValues" class="form-control" />
        <span asp-validation-for="PossibleValues" class="text-danger"></span>
    </div>
</div>
<div class="form-group">
    <label asp-for="MinLength" class="col-md-2 control-label"></label>
    <div class="col-md-10">
        <input asp-for="MinLength" class="form-control" />
        <span asp-validation-for="MinLength" class="text-danger"></span>
    </div>
</div>
<div class="form-group">
    <label asp-for="MaxLength" class="col-md-2 control-label"></label>
    <div class="col-md-10">
        <input asp-for="MaxLength" class="form-control" />
        <span asp-validation-for="MaxLength" class="text-danger"></span>
    </div>
</div>
<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <div class="checkbox">
            <input asp-for="IsRequired" />
            <label asp-for="IsRequired"></label>
        </div>
    </div>
</div>