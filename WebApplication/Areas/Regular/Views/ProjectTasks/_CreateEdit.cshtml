@model Domain.ProjectTask

<div class="form-group">
    <label asp-for="Name" class="col-md-2 control-label"></label>
    <div class="col-md-10">
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
</div>
<div class="form-group">
    <label asp-for="Description" class="col-md-2 control-label"></label>
    <div class="col-md-10">
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
</div>
<div class="form-group">
    <label asp-for="DueDate" class="col-md-2 control-label"></label>
    <div class="col-md-10">
        <input type="datetime-local" asp-for="DueDate" class="form-control" />
        <span asp-validation-for="DueDate" class="text-danger"></span>
    </div>
</div>
<div class="form-group">
    <label asp-for="Priority" class="col-md-2 control-label"></label>
    <div class="col-md-10">
        <select asp-for="Priority" class="form-control" asp-items="Model.PrioritySelectList"></select>
    </div>
</div>
<div class="form-group">
    <label asp-for="Status" class="col-md-2 control-label"></label>
    <div class="col-md-10">
        <select asp-for="Status" class="form-control" asp-items="Model.StatusSelectList"></select>
    </div>
</div>
<div class="form-group">
    <label asp-for="AssignedTo" class="col-md-2 control-label"></label>
    <div class="col-md-10">
        <select asp-for="AssignedTo" class="form-control" asp-items="Model.AssignedToSelectList"></select>
    </div>
</div>

